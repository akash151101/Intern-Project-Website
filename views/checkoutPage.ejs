<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CheckOut Page</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="..\css\all.min.css">
    <link rel="stylesheet" href="..\css\orderPagestyle.css">
</head>
<body>
    
    <!-- Order Information Box -->
    
    <div class="top-box">
        <div class="top-box-text">
            <i class="fas fa-arrow-left icon"></i>
            <p class="heading">ORDER INFORMATION</p>
        </div>
    </div>

    <!-- End of Order Information Box -->

    <!-- Dilvery Box -->

    <div class="delivery-box">
        <div class="dark-text">
            <p class="address-text">Delivery Address</p>
            <i class="fas fa-chevron-right right-arrow"></i>
        </div>
        <div class="light-text">
            <p>Please Choose destination address</p>
        </div>
    </div>

    <!-- End of Dilvery Box -->

    <!-- Dropship Box -->

    <div class="dropship-box">
        <p>Dropship</p>
        <i class="fas fa-toggle-on toggle"></i>
    </div>

    <!-- End of Dropship Box -->

    <!-- Shipping Box -->

    <div class="delivery-box">
        <div class="dark-text">
            <p class="address-text">Shipping Option</p>
            <i class="fas fa-chevron-right right-arrow"></i>
        </div>
        <div class="light-text">
            <p>Please Choose your shipping method.</p>
        </div>
    </div>

    <!-- End of Shipping Box -->

    <!-- Payment Option Box -->

    <div class="delivery-box">
        <div class="dark-text">
            <p class="address-text">Payment Option</p>
            <i class="fas fa-chevron-right right-arrow"></i>
        </div>
        <div class="light-text">
            <p>Please Choose your payment method.</p>
        </div>
    </div>

    <!-- End of Payment Option Box -->


    <!-- Order Detail Box -->

    <div class="order-details-box">
        <p class="order-heading">Order Detail</p>
        <div class="order-details-div">
            <img class="order-img" src="..\images\handBag.jpeg" alt="Handbag Picture">
            <div class="order-text-right">
                <p class="order-name" style="font-size: 12.5px;">ORIGNAL XYZONE BRAND TR1255</p>
                <div class="variant-div">
                    <p>Variant : RED, 40</p>
                </div>
                <p class="light-para">1 PCS (1.100gr) @</p>
                <p>Rp. 100.000</p>
            </div>
        </div>
        <input class="first-input" placeholder="Optional message here"> </input>
        <div class="order-details-div">
            <img class="order-img" src="..\images\handBag.jpeg" alt="Handbag Picture">
            <div class="order-text-right">
                <p class="order-name" style="font-size: 12.5px;">ORIGNAL XYZONE BRAND TR1255</p>
                <div class="variant-div">
                    <p>Variant : RED, 40</p>
                </div>
                <p class="light-para">1 PCS (1.100gr) @</p>
                <p>Rp. 100.000</p>
            </div>
        </div>
        <input placeholder="Optional message here"> </input>
    </div>

    <!-- End of Order Detail Box -->

    <!-- Voucher Box -->

    <div class="card voucher-box">
        <div class="card-body voucher-body">
          <img class="ticket-img" src="..\images\tickets.png" alt="Ticket Picture">
          <p>Voucher Code</p>
          <p>Apply</p>
          <input class="voucher-input"> </input>
        </div>
    </div>

    <!-- End of Voucher Box -->

    <!-- Order Summary Box -->

    <div class="card summary-box">
        <div class="card-body">
            <table>
                <tr>
                  <td>Total items</td>
                  <td>2 Item</td>
                </tr>
                <tr>
                    <td>Total Weight</td>
                    <td>2.2000 Gram</td>
                </tr>
                <tr>
                    <td>Total Order</td>
                    <td>Rp. 360.000</td>
                </tr>
                <tr>
                    <td>Voucher</td>
                    <td class="first-zero">Rp. <span style="color: #44B49B">0</span></td>
                </tr>
                <tr>
                    <td>Shipping Cost</td>
                    <td class="second-zero">Rp. 0</td>
                </tr>
                <tr>
                    <td>Grand Total</td>
                    <td id="colored-text">Rp.   360.000</td>
                </tr>
              </table>
        </div>
    </div>

    <!-- End of Order Summary Box -->

    <p id="condition-para">With Payment, Iagree with terms & condition</p>
    <div class="d-grid gap-2">
        <button class="btn btn-primary button" type="button">Finish</button>
    </div>

</body>
</html>